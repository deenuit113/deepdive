{
    "compilerOptions": {
        "rootDir": "./src", // 소스 파일 안에서 root 폴더를 명시
        "outDir": "./build/js", // ts 컴파일 후에 어느 경로로 들어가는지 명시
        "target": "ES2015", // 타입스크립트를 ES2015 버전의 자바스크립트로 변환
        "noEmitOnError": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "strict": true,
    },
    "include": [ // 소스 파일의 어디에서 타입스크립트 파일을 찾을 수 있는지
        "./src/**/*.ts", // src 폴더 안에 모든 하위 경로, 모든 ts 파일
    ],
    "exclude": [
        "node_modules",
    ]
}